<Window x:Class="MngrPaycheck.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="auto" Width="auto"
        
        WindowStartupLocation="CenterScreen" WindowState="Maximized" MinHeight="600" MinWidth="950">

    <Grid Background="Gainsboro">
        <DataGrid Name="dataGrid1" ItemsSource="{Binding Products}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Cost" Binding="{Binding Cost}" />
                <DataGridTextColumn Header="Units" Binding="{Binding Units}" />
                <DataGridTextColumn Header="Product of Type" Binding="{Binding ProductType.Name}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
